#!/usr/bin/tclsh
# portbuild
package require darwinports

# globals
set portdir .

# Standard procedures
proc print_usage args {
	global argv0
	puts "Usage: $argv0 \[invoice\]"
}

proc fatal args {
	global argv0
	puts stderr "$argv0: $args"
	exit
}

# Main
if {$argc > 1} {
	print_usage
} elseif {$argc == 1} {
	set portdir [lindex $argv 0]
}

darwinports::init
darwinports::build $portdir
